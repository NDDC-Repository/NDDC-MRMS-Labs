                                        <th class="ps-0" scope="row">Marital Status :</th>
                                        <td class="text-muted">@Model.EmployeeDetails.MaritalStatus</td>
                                        <th class="ps-0" scope="row">Age :</th>
                                        <td class="text-muted">N/A</td>
                                    </tr>
                                    <tr>
                                        <th class="ps-0" scope="row">Location :</th>
                                        <td class="text-muted">@Model.EmployeeDetails.PayPoint</td>
                                        <th class="ps-0" scope="row">Phone :</th>
                                        <td class="text-muted">N/A</td>
                                        <th class="ps-0" scope="row">Email :</th>
                                        <td class="text-muted">@Model.EmployeeDetails.Email</td>
                                    </tr>


                                </tbody>
                            </table>
                        </div>
                    </div><!-- end card body -->
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane" id="medBio" role="tabpanel">
        <component type="typeof(NDDC_MRMS_Labs.MyComponents.MedicalBio)" param-EmpId="@Model.EmpId" render-mode="ServerPrerendered" />
    </div>
    <div class="tab-pane" id="vitals" role="tabpanel">
        <component type="typeof(NDDC_MRMS_Labs.MyComponents.Vitals)" param-EmpId="@Model.EmpId" render-mode="ServerPrerendered" />
    </div>
    <div class="tab-pane" id="investigations" role="tabpanel">
        <component type="typeof(NDDC_MRMS_Labs.MyComponents.Investigations)" param-EmpId="@Model.EmpId" param-UserId="@Model.UserId" param-LabId="@Model.LabId" render-mode="ServerPrerendered" />
    </div>
    <div class="tab-pane" id="medReport" role="tabpanel">
        <component type="typeof(NDDC_MRMS_Labs.MyComponents.MedicalReport)" param-EmpId="@Model.EmpId" render-mode="ServerPrerendered" />
