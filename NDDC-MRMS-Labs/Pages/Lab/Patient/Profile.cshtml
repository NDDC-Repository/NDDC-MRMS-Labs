                        <div class="table-responsive">
                            <table class="table table-borderless mb-0">
                                <tbody>
                                    <tr>
                                        <th class="ps-0" scope="row">First Name :</th>
                                        <td class="text-muted">@Model.EmployeeDetails.FirstName</td>
                                        <th class="ps-0" scope="row">Last Name :</th>
                                        <td class="text-muted">@Model.EmployeeDetails.LastName</td>
                                        <th class="ps-0" scope="row">Service Status :</th>
