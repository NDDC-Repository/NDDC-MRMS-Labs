                                                        <option selected=""></option>
                                                    </select>
                                                    <span class="text-danger" asp-validation-for="@Model.Laboratory.State"></span>
                                                </div>
                                                
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-lg-3">
                                                    <label class="form-label">City</label>
