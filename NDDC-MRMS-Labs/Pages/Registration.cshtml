                                                <div class="col-lg-3">
                                                    <label class="form-label">Street & No</label>
                                                </div>
                                                <div class="col-lg-9">
                                                    <input asp-for="@Model.Laboratory.Street" class="form-control" placeholder="Enter Street Name and Number">
                                                    <span class="text-danger" asp-validation-for="@Model.Laboratory.Street"></span>
                                                </div>
                                            </div>
